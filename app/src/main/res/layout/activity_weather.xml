<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.android.weather.wipro.com.weather.WeatherActivity">

    <ListView
        android:id="@+id/list_view_weather_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_fetch_forecast"
        android:padding="5dp"
        android:divider="@android:color/transparent"
        android:scrollbars="none"></ListView>

    <Button
        android:id="@+id/button_fetch_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:text="Get Weather Forecast" />

</RelativeLayout>
